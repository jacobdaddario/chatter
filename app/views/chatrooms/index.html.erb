<div class="flex items-center">
	<div class="w-full" data-controller="dropdown">
		<div class="flex relative items-center justify-center card h-16 mt-8 shadow-sm">
			<span class="flex-grow text-gray-600 font-light text-xl text-center">Chatrooms</span>
			<%= inline_svg_tag "chevron_left.svg", class: "h-10 w-10 text-gray-600 fill-current", data: { action: "click->dropdown#open" } %>
		</div>
		<div class="hidden relative z-10 card m-6 -mt-14 h-14 shadow-md" data-target="dropdown.mobileMenu">
			<div class="flex items-center p-2">
				<%= link_to "Add Channel +", "#", class: "flex-grow text-orange-600 text-lg underline hover:text-orange-400" %>
				<%= inline_svg_tag "chevron_down.svg", class: "h-10 w-10 bg-white text-gray-600 fill-current", data: { action: "click->dropdown#close"} %>
			</div>
			<% unless @chatrooms.empty? %>
				<% @chatrooms.each do |chatroom| %>
					<div class="p-2">
						<%= link_to chatroom.name, "#", class: "font-semibold text-lg" %>
					</div>
				<% end %>
			<% else %>
				<%= inline_svg_tag "add_channel.svg", class: "mt-6 mb-4 h-auto w-full" %>
				<p class="text text-medium text-center tracking-wide my-4">
					Add a chatroom and get chatting!				
				</p>
			<% end %>
		</div>
	</div>
</div>